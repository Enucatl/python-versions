#!/usr/bin/env bash
# Options: <output-dir>

OUT_PREFIX=$1

echo "Building SQLite..."
./parts/sqlite $OUT_PREFIX

echo "Building Python..."
SOURCE_TARBALL='http://python.org/ftp/python/2.6.7/Python-2.6.7.tgz'
curl $SOURCE_TARBALL | tar xz
mv Python-2.6.7 src
cd src

./configure --prefix=$OUT_PREFIX
make
make install

cd ..
rm -fr src